/* pages/map/detail.wxss */

.banner {
  position: relative;
}

.go-btn {
  position: absolute;
  width: 90rpx;
  height: 90rpx;
  right: 30rpx;
  bottom: -46rpx;
  z-index: 4;
}

.go-btn image {
  width: 90rpx;
  height: 90rpx;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.dot-title {
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background: #f9860b;
  color: #fff;
}

h3 {
  font-size: 32rpx;
  color: #fff;
}

.merchant-information {
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}

.h3 {
  color: #333;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  font-weight: normal;
}

.li {
  display: flex;
  align-items: center;
  color: #666;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.merchant-information image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}

.address {
  font-size: 26rpx;
}

.business-introduction {
  margin-top: 16rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
}

.business-introduction .h3 {
  color: #333;
  font-weight: normal;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

.business-introduction .p {
  margin-top: 20rpx;
  color: #666;
  line-height: 150%;
  font-size: 36rpx;
}

.equipment-status {
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  background-color: #f2f2f2;
  border-top: 2rpx solid #d1d1d1;
  display: flex;
  justify-content: left;
  align-items: center;
}

.equipment {
  color: #999;
  margin-left: 20rpx;
  margin-right: 38rpx;
}

.equipment-status .a {
  width: 136rpx;
  height: 56rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 5rpx;
}

.off-line {
  border: 2rpx solid #999;
  color: #999;
}

.on-line {
  border: 2rpx solid #f9860b;
  color: #f9860b;
  margin-right: 60rpx;
}
