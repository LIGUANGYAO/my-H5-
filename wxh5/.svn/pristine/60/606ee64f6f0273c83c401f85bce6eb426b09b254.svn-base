  // 转换日期
  formatDate: function (date, split, type) {
    var result;
    if (type === 1) {
      return date.toString().substr(0, 8).replace(/(\d{4})(\d{2})(\d{2})/, '$2-$3');
    } else {
      var d = new Date(parseInt(date));
      var year = d.getFullYear();
      var month = d.getMonth() + 1;
      var day = d.getDate();

      if (month < 10) {
        month = '0' + month;
      }
      if (day < 10) {
        day = '0' + day;
      }
      split = split || '/';

      result = month + split + day;
    }

    return result
  },
