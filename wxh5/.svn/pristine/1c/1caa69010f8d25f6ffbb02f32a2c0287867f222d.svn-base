
var api = require('../../js/funs/api.js');
Page({
  data: {
    pageCount: 7
  },
  onLoad: function () {
   
   var _this = this;

    wx.setNavigationBarTitle({
      title: "热门推荐"
    })

    wx.showLoading({
      title: '加载中',
    })


    wx.request({
      url: api.queryHot + '?_p=' + api._p,
      method: 'POST',
      data:{
        pageSize: 1,
        pageNum: _this.data.pageCount
      },
      dataType: 'json',
      success: function(res){
        console.log(res.data)
      }
    })


  },
  onReady: function () {

    setTimeout(function () {
      wx.hideLoading()
    }, 500)


  }


})