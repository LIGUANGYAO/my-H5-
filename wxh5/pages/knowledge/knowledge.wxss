/* pages/knowledge/knowledge.wxss */

.knowledge-box {
  padding: 10rpx 20rpx;
  font-size: 30rpx;
}

.nav1 {
  margin: 0 0 30rpx;
  text-align: center;
  border-bottom: 1px solid #f2f2f2;
}

.nav1	view {
  font-size: 30rpx;
  display: inline-block;
  color: #999;
  width: 150rpx;
  margin: 0 36rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.nav1	view.active {
  color: #f9860b;
  border-color: #f9860b;
}

.tag1 {
  margin: 0 0 30rpx 0;
  text-align: left;
}

.tag1 view {
  display: inline-block;
  width: 120rpx;
  height: 56rpx;
  font-size: 26rpx;
  border: 1px solid #cecece;
  color: #999;
  border-radius: 25rpx;
  text-align: center;
  line-height: 56rpx;
  margin: 10rpx 7rpx;
}

.tag1 view.active {
  background: #f9860b;
  color: #fff;
  border-color: #f9860b;
}

.list .item {
  border-bottom: 1px solid #f2f2f2;
  padding: 20rpx 0 20rpx;
}

.item .img-container {
  float: left;
  width: 200rpx;
  height: 160rpx;
  overflow: hidden;
  margin: 0 20rpx 0 0;
}

.item	image {
  height: 100%;
  width: 100%;
}

.item-detail {
  position: relative;
  height: 160rpx;
}

.title {
  color: #333;
  line-height: 42rpx;
  font-size: 26rpx;
}

.type {
  color: #f9860b;
  position: absolute;
  bottom: 0;
  left: 220rpx;
  font-size: 32rpx;
}

.date {
  color: #999;
  position: absolute;
  bottom: 0;
  right: 0;
}
